{
	"name": "web_plsql",
	"version": "0.20.0",
	"author": "Dieter Oberkofler <dieter.oberkofler@gmail.com>",
	"license": "MIT",
	"description": "The Express Middleware for Oracle PL/SQL",
	"keywords": [
		"node",
		"nodejs",
		"express",
		"middleware",
		"plsql",
		"pl/sql",
		"oracle",
		"ohs",
		"ords",
		"apex"
	],
	"homepage": "https://github.com/doberkofler/web_plsql",
	"engines": {
		"npm": ">=10.0.0",
		"node": ">=22.0.0"
	},
	"maintainers": [
		{
			"name": "Dieter Oberkofler",
			"email": "dieter.oberkofler@gmail.com"
		}
	],
	"bugs": {
		"url": "https://github.com/doberkofler/web_plsql/issues"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/doberkofler/web_plsql.git"
	},
	"files": [
		"src/",
		"examples/",
		"types"
	],
	"main": "./src/index.js",
	"types": "./types/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "npm run build:admin",
		"build:admin": "vite build",
		"lint": "prettier --check --experimental-cli . && eslint . && tsc --noEmit && eslint src/admin/js/*.js",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"types": "rm -rf types && tsc  --noEmit false --declaration true --declarationDir types --emitDeclarationOnly true --allowJs true --target es2020 --module es2020 --moduleResolution node --allowSyntheticDefaultImports true src/*.js",
		"clean": "shx rm -f *.tgz && shx rm -f *.log",
		"version": "node update-version.js",
		"prepack": "npm run ci",
		"ci": "npm run clean && npm run version && npm run types && npm run build && npm run lint && npm run test:coverage",
		"create-package": "shx rm -f *.tgz && npm pack",
		"image-build": "docker build --no-cache --progress=plain --tag=web_plsql .",
		"image-save": "docker save web_plsql | gzip > web_plsql.tar.gz"
	},
	"peerDependencies": {
		"oracledb": "6.10.0"
	},
	"dependencies": {
		"chart.js": "^4.5.1",
		"compression": "1.8.1",
		"cookie-parser": "1.4.7",
		"debug": "4.4.3",
		"express": "5.2.1",
		"http-parser-js": "0.5.10",
		"morgan": "1.10.1",
		"multer": "2.0.2",
		"rotating-file-stream": "3.2.8",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@types/compression": "1.8.1",
		"@types/cookie-parser": "1.4.10",
		"@types/debug": "4.1.12",
		"@types/morgan": "1.9.10",
		"@types/multer": "2.0.0",
		"@types/node": "25.2.1",
		"@types/oracledb": "6.10.1",
		"@types/supertest": "6.0.3",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "9.39.2",
		"eslint-plugin-jsdoc": "62.5.2",
		"oracledb": "6.10.0",
		"prettier": "3.8.1",
		"shx": "0.4.0",
		"supertest": "7.2.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	}
}
